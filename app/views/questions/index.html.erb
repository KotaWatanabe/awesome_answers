<div class="container-fluid padding">
<h1>Questions</h1>

<% if @tag.present? %>
  <h6>
    Showing questions tagged by
    <span class= "badge badge-pill badge-primary">
      <%= @tag.name %>
    </span>
  </h6>
<% end %>

<ul class="question-list">
  <% @questions.each do |question| %>
  <div class="card my-2">
    <div class="card-body">
    <li>
      <div class="card-title">
      <%= link_to(question.title, question_path(question)) %> <br />
      <small>
        Posted <%= time_ago_in_words(question.created_at)  %> ago
      </small>
      |
      <small>
        Seen <%= pluralize(question.view_count, "time") %>
      </small>
      </div>
    </li>
    </div>
  </div>
  <% end %>
</ul>

</div>

